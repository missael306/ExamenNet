@{
    ViewBag.Title = "Home Page";
}

<!--START: HOME-INDEX-->
<section>
    <div class="row mb-3">
        <div class="col-3">            
            <button id="btnAddProject" type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addProject">
                Agregar proyecto
            </button>

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered table-hover w-100" id="tblProjects">
                <thead>
                    <tr>
                        <th>Proyecto</th>
                        <th>Categoría</th>
                        <th class="text-center">Editar</th>
                        <th class="text-center">Eliminar</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</section>
<!--END: HOME-INDEX-->
<!--START: ADD PROJECT-->
<div class="modal fade" id="addProject" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar proyecto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dvEdit">

                </div>
                <div id="dvAdd">
                    @Html.Partial("_FrmProject",(Examen.Models.Project)ViewBag.Project,ViewData)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary btn-sm" form="frmAddProject">Guardar Proyecto</button>
            </div>
        </div>
    </div>
</div>
<!--END: ADD PROJECT-->

@section scripts{
    @Scripts.Render("~/bundles/home")
}