@model Examen.Models.Project
@using Examen.Models

@using (Html.BeginForm("AddProject", "Home", FormMethod.Post, new { id = "frmAddProject" }))
{
    @Html.AntiForgeryToken()

    <div class="row mb-1">
        <div class="col-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProjectID)
        </div>
    </div>
    <div class="row mb-1">
        <div class="col-12 form-group">
            @Html.LabelFor(model => model.NameProject, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.NameProject, new { htmlAttributes = new { @class = "form-control " } })
            @Html.ValidationMessageFor(model => model.NameProject, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-1">
        <div class="col-12 form-group">
            @Html.LabelFor(model => model.CategoryID, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.CategoryID, new SelectList((List<Category>)ViewBag.lstCategories, "CategoryID", "NameCategory",Model.CategoryID), "--Seleccione--", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
